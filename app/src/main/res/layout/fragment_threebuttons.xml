<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bSecondAswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_style"
        android:text="Maybe" />

    <Button
        android:id="@+id/bFirstAswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/bSecondAswer"
        android:layout_marginRight="@dimen/margin_betweenButtons"
        android:background="@drawable/button_style"
        android:text="Yes" />

    <Button
        android:id="@+id/bThirdAswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/bSecondAswer"
        android:layout_marginLeft="@dimen/margin_betweenButtons"
        android:background="@drawable/button_style"
        android:text="No" />



</RelativeLayout>