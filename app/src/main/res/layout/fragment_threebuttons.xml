<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/bSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/bSecondAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/bSpace"
        android:background="@drawable/button_shape"
        android:text="Maybe" />

    <Button
        android:id="@+id/bFirstAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/bSecondAnswer"
        android:layout_toLeftOf="@id/bSecondAnswer"
        android:layout_marginRight="@dimen/margin_betweenButtons"
        android:background="@drawable/button_shape"
        android:text="Yes" />

    <Button
        android:id="@+id/bThirdAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/bSecondAnswer"
        android:layout_toRightOf="@id/bSecondAnswer"
        android:layout_marginLeft="@dimen/margin_betweenButtons"
        android:background="@drawable/button_shape"
        android:text="No" />



</RelativeLayout>